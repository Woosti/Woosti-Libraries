{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "noUnusedLocals": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "baseUrl": "src",
    "outDir": "lib"
  },
  "compileOnSave": false
}
